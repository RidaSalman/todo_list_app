<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/dialogAlert"
    app:cardCornerRadius="15dp"
    android:padding="20dp"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">
    
    <TextView
        android:layout_width="match_parent"
        android:text="New Subtask"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/startnowtext"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter subtask title"
        android:gravity="center"
        android:id="@+id/instruction_messege"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subtask_title"
        android:hint="Enter Title.."
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:textColor="@color/colorDarkBlue"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="Cancel"
                android:backgroundTint="@color/colorcancelbutton"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="Add"
                android:backgroundTint="@color/colorDarkBlue"
                android:layout_margin="10dp"/>

        </LinearLayout>
</LinearLayout>




</androidx.cardview.widget.CardView>

